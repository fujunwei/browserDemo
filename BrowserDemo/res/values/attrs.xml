<resources>

    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr name="above_wave_color" format="color" />
        <attr name="blow_wave_color" format="color" />
        <attr name="progress" format="integer" />
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="CustomMemView">
        <attr name="fixedCircleColor" format="color|reference" />
        <attr name="movableCircleColor" format="color|reference" />
        <attr name="circleWidth" format="dimension" />
        <attr name="speed" format="integer" />
        <attr name="memTitle" format="string" />
        <attr name="bigTextSize" format="dimension" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="circleRadius" format="dimension" />
        <attr name="type" format="integer" />
    </declare-styleable>
    <declare-styleable name="FloatRelativeLayout">
        <attr name="orientationLeft" format="boolean" />
    </declare-styleable>
    <declare-styleable name="FlowManagerLayout">
        <attr name="isShowBottom" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CounterAttr">
        <attr name="textSize" format="integer" />
 <!-- 字符大小 -->
        <attr name="textSpeed" format="dimension" />
 <!-- 字符间距 -->
        <attr name="textColor" format="color|reference" />
 <!-- 字体颜色 -->
        <attr name="displace" format="dimension" />
 <!-- 位移距离 -->
    </declare-styleable>
    <declare-styleable name="VpnActionLayout">
        <attr name="itemImage" format="string" />
        <attr name="itemTitle" format="string" />
        <attr name="itemSubtitle" format="string" />
    </declare-styleable>

</resources>